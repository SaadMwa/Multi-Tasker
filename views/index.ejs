<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Projects - Multi-Tasker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Loading Screen -->
    <div class="loading-screen" id="loadingScreen">
        <div class="loading-content">
            <div class="loading-spinner"></div>
            <div class="loading-text">Loading Your Projects...</div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/projects">Multi-Tasker</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.email %></span>
                <a class="nav-link" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Your Projects</h2>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="project-card">
                    <h3>Create New Project</h3>
                    <form action="/projects" method="POST">
                        <div class="form-group">
                            <label for="name">Project Name</label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Project name" required />
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" id="description" name="description" class="form-control" placeholder="Description" />
                        </div>
                        <button type="submit" class="btn mt-3">Create Project</button>
                    </form>
                </div>

                <hr />

                <h3>Your Projects</h3>
                <% if (projects.length === 0) { %>
                    <p class="text-center">No projects yet. Create your first project above!</p>
                <% } else { %>
                    <div class="row">
                        <% projects.forEach(project => { %>
                            <div class="col-md-6 mb-3">
                                <div class="project-card">
                                    <h4><a href="/projects/<%= project._id %>" class="text-decoration-none"><%= project.name %></a></h4>
                                    <p><%= project.description || 'No description' %></p>
                                    <small class="text-muted">Created: <%= new Date(project.createdAt).toLocaleDateString() %></small>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Floating Action Button -->
    <button class="fab" onclick="document.querySelector('.project-card form').scrollIntoView({behavior: 'smooth'})" title="Add New Project">
        +
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
