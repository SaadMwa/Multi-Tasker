<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.name %> - Multi-Tasker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/projects">Multi-Tasker</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.email %></span>
                <a class="nav-link" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="project-card">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2><%= project.name %></h2>
                            <p><%= project.description || 'No description' %></p>
                            <small class="text-muted">Created: <%= new Date(project.createdAt).toLocaleDateString() %></small>
                        </div>
                        <div>
                            <a href="/projects/<%= project._id %>/edit" class="btn btn-outline-primary me-2">Edit</a>
                            <form action="/projects/<%= project._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this project?')">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="project-card">
                    <h3>Add New Task</h3>
                    <form action="/<%= project._id %>/tasks" method="POST">
                        <div class="form-group">
                            <label for="title">Task Title</label>
                            <input type="text" id="title" name="title" class="form-control" placeholder="Task title" required />
                        </div>
                        <div class="form-group">
                            <label for="priority">Priority</label>
                            <select id="priority" name="priority" class="form-control">
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dueDate">Due Date (optional)</label>
                            <input type="date" id="dueDate" name="dueDate" class="form-control" />
                        </div>
                        <button type="submit" class="btn mt-3">Add Task</button>
                    </form>
                </div>

                <div class="project-card">
                    <h3>Tasks</h3>
                    <% if (tasks.length > 0) { %>
                        <% const completedTasks = tasks.filter(t => t.completed).length; %>
                        <% const totalTasks = tasks.length; %>
                        <% const progressPercent = Math.round((completedTasks / totalTasks) * 100); %>
                        <div class="task-progress">
                            <div class="task-progress-bar" style="width: <%= progressPercent %>%"></div>
                        </div>
                        <small class="text-muted"><%= completedTasks %> of <%= totalTasks %> tasks completed</small>
                        <% tasks.forEach(task => { %>
                            <div class="task-item">
                                <div class="d-flex align-items-center flex-wrap">
                                    <form action="/tasks/<%= task._id %>/toggle" method="POST" style="display:inline;">
                                        <button type="submit" class="task-toggle tooltip" title="<%= task.completed ? 'Mark as Incomplete' : 'Mark as Complete' %>">
                                            <%= task.completed ? '✅' : '⬜' %>
                                        </button>
                                    </form>
                                    <span class="<%= task.completed ? 'task-completed' : '' %> ms-2"><%= task.title %></span>
                                    <%
                                        let badgeClass = 'success';
                                        if (task.priority === 'high') badgeClass = 'danger';
                                        else if (task.priority === 'medium') badgeClass = 'warning';
                                    %>
                                    <span class="badge bg-<%= badgeClass %> ms-2"><%= task.priority %></span>
                                    <% if (task.dueDate) { %>
                                        <small class="text-muted ms-2">Due: <%= new Date(task.dueDate).toLocaleDateString() %></small>
                                    <% } %>
                                </div>
                                <form action="/tasks/<%= task._id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="task-delete tooltip" title="Delete Task">Delete</button>
                                </form>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center">No tasks yet. Add your first task above!</p>
                    <% } %>
                </div>

                <div class="text-center mt-4">
                    <a href="/projects" class="btn btn-secondary">← Back to Projects</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>